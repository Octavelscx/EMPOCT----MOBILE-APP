<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bouton Retour (retour1) -->
        <Button
            android:id="@+id/retour1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retour à l'accueil"
            android:backgroundTint="#5B7BFF"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            />

        <!-- SECTION Liste des périphériques (scan) -->
        <TextView
            android:id="@+id/textViewScanTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Périphériques BLE détectés :"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            />

        <!-- Liste des devices BLE découverts -->
        <ListView
            android:id="@+id/listViewDevices"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            />

        <!-- SECTION CONNECTEE -->
        <LinearLayout
            android:id="@+id/connectedSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            >

            <TextView
                android:id="@+id/textViewConnected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connecté au device : ???"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                />

            <!-- Bouton renommé en SYNC (gros) -->
            <Button
                android:id="@+id/buttonSync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SYNCHRONISER LES DONNÉES"
                android:backgroundTint="#5B7BFF"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/textViewResultatMesure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Résultat : "
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
