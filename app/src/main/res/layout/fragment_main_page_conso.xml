<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".MainPageConso">

    <!-- Boutons en haut de la page -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <android.widget.Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/reg_resized"
            android:backgroundTint="#5B7BFF" />

        <Button
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#5B7BFF"
            android:text="Home"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#5B7BFF"
            android:text="CO"
            android:textColor="@color/white" />

        <android.widget.Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/bird_resized" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Section avec un bouton -->
            <android.widget.Button
                android:id="@+id/button5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bigbouton_resized" />

            <TextView
                android:id="@+id/infoTextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/kdam_thmor_pro"
                android:text="Bienvenue"
                android:textAlignment="center"
                android:textColor="#5B7BFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Texte -->
            <TextView
                android:id="@+id/infoTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/kdam_thmor_pro"
                android:text="Projet EMPOCT"
                android:textAlignment="center"
                android:textSize="16sp" />

            <!-- Texte -->
            <TextView
                android:id="@+id/infoTextView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kdam_thmor_pro"
                android:text="Progression"
                android:textAlignment="textStart"
                android:textColor="#5B7BFF"
                android:textSize="20sp" />

            <!-- Section pour afficher le mois et l'année -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Bouton précédent mois -->
                <Button
                    android:id="@+id/prevMonthButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Précédent"
                    android:backgroundTint="#5B7BFF"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="16dp"/>

                <!-- Affichage du mois et de l'année -->
                <TextView
                    android:id="@+id/monthYearTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mois et Année"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="#5B7BFF"
                    android:fontFamily="@font/kdam_thmor_pro"
                    android:layout_marginEnd="16dp"/>

                <!-- Bouton suivant mois -->
                <Button
                    android:id="@+id/nextMonthButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suivant"
                    android:backgroundTint="#5B7BFF"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- Calendrier -->
            <GridView
                android:id="@+id/gridViewCalendar"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:horizontalSpacing="1dp"
                android:numColumns="7"
                android:verticalSpacing="1dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
